	SELECT * FROM (SELECT ROWNUM RNUM, NUM, EMPLOYEENUMBER, SUBJECT,PASS, CONTENT, REGDATE, READCOUNT FROM (SELECT * FROM BOARD WHERE TEAMNUM = #{teamNum} ORDER BY NUM DESC)) <![CDATA[ WHERE RNUM >=#{start} AND RNUM <= #{end}]]>
	</select>
	
	<select id ="content" parameterType="int" resultType = "com.project.proto.dto.Board_Dto">
	SELECT a.NAME, b.* FROM MEMBER a LEFT JOIN BOARD b ON a.EMPLOYEENUMBER = b.EMPLOYEENUMBER WHERE NUM = #{PARAM1}
	</select>
	
	<select id = "write" parameterType="com.project.proto.dto.Board_Dto" resultType = "int">
	INSERT INTO BOARD (NUM,EMPLOYEENUMBER, SUBJECT, CONTENT, READCOUNT, REGDATE, TEAMNUM) VALUES( BOARD_SEQ.NEXTVAL,#{employeeNumber},#{subject},#{content},0, sysdate,#{teamNum})
	</select>  -->
	

	<select id = "noticeWrite" parameterType="com.project.proto.dto.Notice_Dto" resultType = "int">
	INSERT INTO NOTICE (TITLE, PUBDATE, LINK, AUTHOR, DESCRIPTION, CONTENT, NUM) VALUES( NOTICE_SEQ.NEXTVAL, #{title},#{link},${author},${description},${content},${num})
	</select>
	
	<select id = "noticeList" resultType="com.project.proto.dto.Notice_Dto" parameterType="int">
<!-- 	SELECT * FROM NOTICE WHERE <![CDATA[ NUM > 5]]> ORDER BY NUM DESC  -->
	SELECT * FROM NOTICE WHERE <![CDATA[NUM <= #{currentPageNum}]]> ORDER BY NUM DESC
	</select>
		
	<select id = "noticeStart" resultType="com.project.proto.dto.Notice_Dto">
<!-- 	SELECT * FROM NOTICE WHERE <![CDATA[ NUM > 5]]> ORDER BY NUM DESC  -->
	SELECT * FROM NOTICE ORDER BY NUM DESC
	</select>

	<select id = "modify" parameterType="com.project.proto.dto.Dto" resultType = "int">
	UPDATE BOARD SET SUBJECT = #{subject}, CONTENT = #{content} , REGDATE = sysdate WHERE NUM = #{num}
	</select>
	
	<select id = "delete" parameterType="String" resultType = "int">
	DELETE FROM BOARD WHERE NUM = #{PARAM1}
	</select>
	
	<select id = "readcount" parameterType="String" resultType = "int">
	UPDATE BOARD SET READCOUNT = READCOUNT+1 WHERE NUM = #{PARAM1}
	</select>

	<insert id = "insertReply"  parameterType="com.project.proto.dto.Reply_Dto" >
	INSERT INTO REPLY(RNUM, BNUM, REPLYTEXT, EMPLOYEENUMBER) VALUES(reply_seq.nextval, #{bnum}, #{replytext}, #{employeeNumber})
	</insert>
	
	<select id ="contentReply" parameterType="String" resultType = "com.project.proto.dto.Reply_Dto">
	SELECT a.NAME, b.* FROM MEMBER a LEFT JOIN REPLY b ON a.EMPLOYEENUMBER = b.EMPLOYEENUMBER WHERE BNUM = #{PARAM1}
	</select>
	
	<select id = "replyDelete" parameterType="String" resultType = "int">
	DELETE FROM REPLY WHERE RNUM = #{PARAM1}

	</select>
	
	<select id="rnum" resultType="com.project.proto.dto.Reply_Dto" parameterType="com.project.proto.dto.Reply_Dto">
	SELECT a.RNUM,a.REGDATE,b.NAME FROM REPLY a LEFT JOIN MEMBER b ON a.EMPLOYEENUMBER = b.EMPLOYEENUMBER WHERE BNUM = #{bnum} AND a.EMPLOYEENUMBER = #{employeeNumber} ORDER BY RNUM DESC
	</select>
	
	<select id="countteamNum" resultType="int" parameterType="String">
	SELECT COUNT(*) FROM BOARD WHERE TEAMNUM = #{PARAM1}
	</select>
	

	<select id = "news_passCK" parameterType="int" resultType = "int">
	SELECT NEWS_PASS FROM SETTING WHERE NEWS_PASS= #{PARAM1}

	</select>
	
	<insert id = "insertNews"  parameterType="com.project.proto.dto.Notice_Dto" >
	INSERT INTO NOTICE(AUTHOR,TITLE,CONTENT,NUM) VALUES(#{author}, #{title}, #{content},notice_seq.nextval)
	</insert>
	

	<select id="selectChatList" resultType="com.project.proto.dto.ChatComment_Dto" parameterType="com.project.proto.dto.ChatComment_Dto">
	SELECT * FROM CHATTINGDATA WHERE (E_FROM = #{e_from} and E_TO = #{e_to})  or  (E_FROM = #{e_to} and E_TO = #{e_from})ORDER BY COMMENTDATE ASC
	</select>
	
	<insert id = "insertChatList"  parameterType="com.project.proto.dto.ChatComment_Dto" >
	INSERT INTO CHATTINGDATA(E_FROM, E_TO, CHAT_COMMENT,COMMENTDATE) VALUES(#{e_from}, #{e_to}, #{chat_comment},SYSDATE)
	</insert>
	

</mapper>

