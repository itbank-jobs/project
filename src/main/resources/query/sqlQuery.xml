<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="sqlQuery">

	
	<select id="selectList" resultType="com.project.proto.dto.Dto">
		SELECT * FROM MEMBER
	</select>
	
	<!-- <select id = "emailList" parameterType="String" resultType="com.project.proto.dto.Dto"> -->
	<select id = "emailList" parameterType="String" resultType = "int">
	SELECT * FROM MEMBER WHERE EMAIL = #{PARAM1}
	</select>
	
	<select id = "loginCheckList" parameterType="com.project.proto.dto.Dto" resultType = "int">
	SELECT * FROM MEMBER WHERE EMPLOYEENUMBER = #{employeeNumber} AND PASSWORD = #{password}
	</select>
		
	<insert id = "register" parameterType="com.project.proto.dto.Dto">
	INSERT INTO MEMBER(employeeNumber,name,email,password,day)VALUES(#{employeeNumber},#{name},#{email},#{password},sysdate)
	</insert>
	
	<select id = "find_PW" resultType="com.project.proto.dto.Dto">
	SELECT EMAIL,PASSWORD FROM MEMBER WHERE EMPLOYEENUMBER = #{employeeNumber}
	</select>
	
	<select id ="List" resultType = "com.project.proto.dto.board_Dto">
	SELECT * FROM BOARD
	
	</select>
	
	<select id ="contentList" parameterType="com.project.proto.dto.board_Dto" resultType = "com.project.proto.dto.board_Dto">
	SELECT * FROM BOARD WHERE NUM = #{PARAM1}
	</select>
	
	<select id = "write" parameterType="com.project.proto.dto.board_Dto" resultType = "int">
<!-- 	INSERT INTO BOARD (NUM, WRITER, SUBJECT, CONTENT, READCOUNT) VALUES(BOARD_SEQ.NEXTVAL,#{writer},#{subject},#{content},0) -->
	INSERT INTO BOARD (NUM, WRITER, SUBJECT, CONTENT, READCOUNT) VALUES( BOARD_SEQ.NEXTVAL, #{writer},#{subject},#{content},0)
	</select> 
</mapper>

