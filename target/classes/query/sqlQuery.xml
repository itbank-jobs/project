<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="sqlQuery">

	
	<select id="selectList" resultType="com.project.proto.dto.Dto">
	SELECT * FROM MEMBER
	</select>
	
	<select id="info" resultType="com.project.proto.dto.Dto" parameterType="String">
	SELECT * FROM MEMBER WHERE EMPLOYEENUMBER = #{PARAM1}
	</select>
	
	<select id="info_modify" resultType="com.project.proto.dto.Dto" parameterType="com.project.proto.dto.Dto">
	UPDATE MEMBER SET NAME = #{name}, EMAIL = #{email}, PASSWORD = #{password} WHERE EMPLOYEENUMBER = #{employeeNumber}
	</select>
	
	<!-- <select id = "emailList" parameterType="String" resultType="com.project.proto.dto.Dto"> -->
	<select id = "emailList" parameterType="String" resultType = "int">
	SELECT * FROM MEMBER WHERE EMAIL = #{PARAM1}
	</select>
	
	<select id = "loginCheckList" parameterType="com.project.proto.dto.Dto" resultType = "com.project.proto.dto.Dto">
	SELECT * FROM MEMBER WHERE EMPLOYEENUMBER = #{employeeNumber} AND PASSWORD = #{password}
	</select>
		
	<insert id = "register" parameterType="com.project.proto.dto.Dto">
	INSERT INTO MEMBER(employeeNumber,name,email,password,day,teamNum, team )VALUES(#{employeeNumber},#{name},#{email},#{password},sysdate, #{teamNum}, #{team})
	</insert>
	
	<select id = "find_PW" resultType="com.project.proto.dto.Dto">
	SELECT EMAIL,PASSWORD FROM MEMBER WHERE EMPLOYEENUMBER = #{employeeNumber}
	</select>
	

